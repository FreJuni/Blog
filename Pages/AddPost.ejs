<%- include("./includes/head.ejs")  %>
    <div class="add-post-con">
        <div class="login-con">
            <div class="add-title-con">
                <h1>Add a new post</h1>
                <a href="/"><i class="fa-solid fa-arrow-left"></i></a>
            </div>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Dicta in consequuntur dolore?</p>
            <form action="/admin" method="post" enctype="multipart/form-data" novalidate>
                <input value="<%= csrfToken %>" name="_csrf" hidden>
                <% if(errorMsg) { %>
                    <p class="errorMsg"><%= errorMsg %></p>
                <% } %>
                <div class="con">
                    <label for="title">Title</label>
                    <input type="text" name="title" value="<%= oldForm.title %>" required>
                </div> 
                <div class="con">
                    <label for="image">Image URl</label>
                    <input type="file" name="image"  value="<%= oldForm.image %>" required>
                </div>
               <div class="con">
                    <label for="description">Description</label>
                    <textarea name="description" required   id="description"><%= oldForm.description %></textarea>
               </div>
                <button class="post-btn">Post</button>
            </form>
        </div>
    </div>
<%- include("./includes/foot.ejs") %>